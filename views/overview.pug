extends base 

block content 
    main.main 
        .card-container
            each medicine in medicines  
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/medicines/${medicine.image}`, alt=`${medicine.name} `)
                        h3.heading-tertirary
                            span=medicine.name

                    .card__details
                        h4.card__sub-heading=`${medicine.group}`
                        p.card__text=`${medicine.companyName}`
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span Gopalgonj, Dhaka.
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span= medicine.expirationDate.toLocaleString('en-us', {month:'long', year:'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            |       
                            span= medicine.weightOfDrug
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-user')
                            span= medicine.dose

                    .card__footer
                        p
                            span.card__footer-value=`${medicine.price}`
                            span.card__footer-text per piece
                        p.card__ratings
                            span.card__footer-value 4.9
                            span.card__footer-text rating (21)
                        a.btn.btn--green.btn--small(href='#') Details            